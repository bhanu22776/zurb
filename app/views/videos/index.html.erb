<h1>Listing videos</h1>

<table>
  <tr>
    <th>Title</th>
    <th>Source</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @videos.each do |video| %>
  <tr>
    <td><%= video.title %></td>
    <td><iframe src=<%= video.source %> frameborder="0" allowfullscreen></iframe></td>
    <td><%= link_to 'Show', video , :class => "tiny button" %></td>
    <td><%= link_to 'Edit', edit_video_path(video) , :class => "tiny button" %></td>
    <td><%= link_to 'Destroy', video, method: :delete, data: { confirm: 'Are you sure?' } , :class => "tiny button" %></td>
  </tr>
<% end %>
</table>

